<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_txt"
        android:layout_width="256dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="직접입력"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_where"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_where1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현장체험학습 날, 갑자기 배가 아픈 상황"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_where3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내가 좋아하는 이성친구를 친한친구도 좋아하는 상황"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_where2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학예회를 준비하는 데 하고싶은 역할이 겹치는 상황"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입력"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="점심시간"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학교로 돌아올 때"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_time3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="방과후"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_time4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쉬는 시간(점심시간)"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_time5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아침활동 시간"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입력"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_location1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="학교"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="현장체험학습 장소"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="버스 안"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="교실"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="집"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="운동장"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PC방"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="도서관"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="창원 시내"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="입력"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_human"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_human1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="해인(남학생)"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="지민(여학생)"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선생님"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아빠"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="엄마"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="호랑이"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사자"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="로봇"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="할아버지"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="요정"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_make"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장면"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="때"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장소"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_human"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인물"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대본리딩"
            android:visibility="gone" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>