    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingBottom="80dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="840dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/txt_left"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/txt_right"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="700dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/txt_subtitle"/>
        <ImageView
            android:layout_width="800dp"
            android:layout_height="150dp"
            android:background="@drawable/txt_title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_subActivity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_button1"
            android:textColor="#fff"
            android:textSize="30dp"
            android:text="연극의 이해"
            android:fontFamily="@font/jalnan"/>

        <Button
            android:id="@+id/btn_subActivity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/main_button2"
            android:textColor="#fff"
            android:textSize="30dp"
            android:text="연극의 실제"
            android:fontFamily="@font/jalnan"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_help"
        android:layout_marginTop="10dp"
        style="@style/BtnHelp"/>


