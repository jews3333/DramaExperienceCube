<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background">

    <TextView
        style="@style/Title"
        android:text="연극의 실제"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/btn_ready"
            style="@style/SubBtn2"
            android:background="@drawable/sub_button1"
            android:text="연극의\n준비"/>
        <Button
            android:id="@+id/btn_traning"
            style="@style/SubBtn2"
            android:background="@drawable/sub_button2"
            android:text="연극의\n연습"/>
        <Button
            android:id="@+id/btn_reality"
            style="@style/SubBtn2"
            android:background="@drawable/sub_button3"
            android:text="연극의\n실연"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_back"
        style="@style/BtnBack"/>
    <ImageButton
        android:id="@+id/btn_home"
        style="@style/BtnHome"/>

</RelativeLayout>