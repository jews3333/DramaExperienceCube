<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background">

    <TextView
        style="@style/Title"
        android:text="연극의 준비"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_ColorActivity"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_ready_001"/>

            <Button
                android:id="@+id/btn_animation"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="@drawable/btn_ready_002"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_yesoryes"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_ready_003"/>

            <Button
                android:id="@+id/btn_game"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="@drawable/btn_ready_004"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="뒤로가기"/>


</RelativeLayout>