<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background">

    <FrameLayout
        android:id="@+id/frame_sound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/btn_sound_frag1"
            android:text="감정,\n배경음악"
            style="@style/SubBtn"/>

        <Button
            android:id="@+id/btn_sound_frag2"
            android:text="동물,\n스포츠"
            style="@style/SubBtn"/>
        <Button
            android:id="@+id/btn_sound_frag3"
            android:text="날씨, 교통"
            style="@style/SubBtn"/>
        <Button
            android:id="@+id/btn_sound_frag4"
            android:text="기타"
            style="@style/SubBtn"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_back"
        style="@style/BtnBack"/>

    <ImageButton
        android:id="@+id/btn_home"
        style="@style/BtnHome"/>

</RelativeLayout>