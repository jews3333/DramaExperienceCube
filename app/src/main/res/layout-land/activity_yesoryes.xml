<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background3">

    <TextView
        android:id="@+id/textView"
        style="@style/Title"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Yes or Yes\n즉흥극" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/textView"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="당신이 "
            android:textColor="#fff"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_Level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="1수준"
                android:textAlignment="center"
                android:textColor="#009e96"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="#ffffff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="2수준"
                android:textAlignment="center"
                android:textColor="#ae5da1"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그 사람인가요?"
            android:textColor="#fff"
            android:textSize="22sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Level1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/cycle_button3"
            android:padding="10dp"
            android:text="1수준"
            android:textColor="#009e96"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_All_Level"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/cycle_button2"
            android:padding="10dp"
            android:text="전체"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Level2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/cycle_button3"
            android:padding="10dp"
            android:text="2수준"
            android:textColor="#ae5da1"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/btn_back"
        style="@style/BtnBack" />

    <ImageButton
        android:id="@+id/btn_home"
        style="@style/BtnHome" />

    <ImageButton
        android:id="@+id/btn_help"
        style="@style/BtnHelp" />


</RelativeLayout>