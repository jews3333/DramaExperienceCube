<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Background">
    
    <FrameLayout
        android:id="@+id/frame_sub1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_sub1_frag1"
            android:text="연극의\n개념"
            style="@style/SubBtn"/>

        <Button
            android:id="@+id/btn_sub1_frag2"
            android:text="연극의\n필요성과\n효과"
            style="@style/SubBtn"/>
        <Button
            android:id="@+id/btn_sub1_frag3"
            android:text="연극의 요소"
            style="@style/SubBtn"/>
        <Button
            android:id="@+id/btn_sub1_frag4"
            android:text="FAQ"
            style="@style/SubBtn"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_back"
        style="@style/BtnBack"/>

    <ImageButton
        android:id="@+id/btn_home"
        style="@style/BtnHome"/>

</RelativeLayout>