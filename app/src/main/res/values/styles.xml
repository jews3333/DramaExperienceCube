<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 연극체험큐브 공통 스타일링 -->
    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_full</item>
    </style>

    <style name="Background2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_full2</item>
    </style>

    <style name="Background3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_black</item>
    </style>

    <style name="Container" parent="@android:style/Widget">
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginBottom">120dp</item>
        <item name="android:layout_marginLeft">130dp</item>
        <item name="android:layout_marginRight">130dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Title" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/jalnan</item>
    </style>

    <style name="BtnBack" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/cycle_button</item>
        <item name="android:src">@drawable/ico_back</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="BtnHome" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/cycle_button</item>
        <item name="android:src">@drawable/ico_home</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="BtnList" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/cycle_button</item>
        <item name="android:src">@drawable/ico_list</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="BtnSize" parent="@android:style/Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SubTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#a3312f</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">#a3312f</item>
    </style>

    <style name="Tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/jalnan</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">45dp</item>
    </style>

    <style name="SubBtn" parent="@android:style/Widget.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/cycle_button</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:fontFamily">@font/jalnan</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="SubBtn2" parent="@android:style/Widget.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:fontFamily">@font/jalnan</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Video">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="BtnStart">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/main_button3</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="BtnStop">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/main_button4</item>
    </style>

    <style name="planListBtn">
        <item name="android:background">@drawable/cycle_button3</item>
        <item name="android:color">#fff</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="soundList">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#00000000</item>
    </style>

</resources>
